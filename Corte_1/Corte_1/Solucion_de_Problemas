def calcular_MCD(num1, num2):
    l = 0
    if num2%2==0:
      while num2 != 0:
        
          l = num2
          num2 = num1 % num2
          num1 = l
      return num1, print(f"El Máximo común divisor de {num1} y {num2} es {resul}")
